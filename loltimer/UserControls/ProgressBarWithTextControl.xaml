<UserControl x:Class="Loltimer.ProgressBarWithTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="35" Width="280">
    <Grid HorizontalAlignment="Left" Width="280" Margin="0,0,-90,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="ProgBar" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="280" ValueChanged="ProgressBar_ValueChanged" Grid.RowSpan="2" Margin="0,0,-90,0"/>
        <TextBlock x:Name="ProgText" Margin="105,5,0,10" TextWrapping="Wrap" Text="Time Left" VerticalAlignment="Center" Height="20" RenderTransformOrigin="6,1.667" HorizontalAlignment="Left" Width="65" TextDecorations="{x:Null}" FontFamily="Times New Roman" FontSize="16" Grid.RowSpan="2"/>
    </Grid>
</UserControl>
